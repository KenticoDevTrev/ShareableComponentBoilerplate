<?xml version="1.0" encoding="utf-8"?>

<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <system.web.webPages.razor xdt:Transform="InsertIfMissing">
    <pages pageBaseType="System.Web.Mvc.WebViewPage" xdt:Transform="InsertIfMissing" xdt:Locator="Match(pageBaseType)">
      <namespaces xdt:Transform="InsertIfMissing">
        <add namespace="Kentico.Web.Mvc" 
             xdt:Transform="InsertIfMissing" xdt:Locator="Match(namespace)" />
      </namespaces>
    </pages>
  </system.web.webPages.razor>
</configuration>
 